<h1> Task: <%= @task.title %> </h1>
<p> Note: <%= @task.details %> </p>
<p> completed?: <%= @task.completed %> </p>
<p> <%= link_to "Edit this task", edit_path %></p>
<p> <%= link_to "Back to all tasks", tasks_path %></p>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
